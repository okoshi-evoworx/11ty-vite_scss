{
  "extends": ["markuplint:recommended"],
  "excludeFiles": ["node_modules/**/*.html"],
  "parser": {
    "\\.njk$": "@markuplint/nunjucks-parser"
  },
  "parserOptions": {
    "ignoreFrontMatter": true
  },
  "rules": {
    "invalid-attr":  {
      "options": {
        "ignoreAttrNamePrefix": [ "<!", "{%", "{{" ]
      }
    },
    "permitted-contents": {
      "options": {
        "ignoreHasMutableChildren": false
      }
    }
  }
}
