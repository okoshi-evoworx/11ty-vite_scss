{
  "name": "11ty-vite_scss",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "build": "npx vite build && npx @11ty/eleventy && npm run beautify:html",
    "11ty": "npx @11ty/eleventy",
    "11ty:w": "npx @11ty/eleventy --watch",
    "vite": "npx vite build",
    "vite:w": "vite build --watch",
    "serve": "npx @11ty/eleventy --serve & npx vite build --watch",
    "s": "npm run serve",
    "dev": "npm run serve",
    "watch": "npx @11ty/eleventy --watch & npx vite build --watch",
    "w": "npm run watch",
    "beautify:html": "npx js-beautify -f './dist/**/*.html' --type html  --no-preserve-newlines --editorconfig",
    "check:njk": "npx markuplint 'src/**/*.njk' & npx prettier 'src/njk/**/*.njk' '!./dist' --check",
    "fix:njk": "npx prettier './src/njk/**/*.njk' '!./dist' --write",
    "check:js": "biome check src/js/**/*.js",
    "fix:js": "biome check --write src/js/**/*.js",
    "check:css": "stylelint 'src/scss/**/*.scss' & npx prettier 'src/tailwind/**/*.css'",
    "fix:css": "stylelint --fix 'src/scss/**/*.scss' & npx prettier 'src/tailwind/**/*.css' --write",
    "check": "npm run check:html & npm run check:njk & npm run check:js & npm run check:css",
    "fix": "npm run fix:njk & npm run fix:js & npm run fix:css",
    "test": "npx playwright test"
  },
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@axe-core/playwright": "^4.10.2",
    "@biomejs/biome": "^2.2.4",
    "@markuplint/nunjucks-parser": "^4.6.21",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4.1.13",
    "browserslist": "^4.25.4",
    "browserslist-config-baseline": "^0.5.0",
    "date-fns": "^4.1.0",
    "eleventy-plugin-clean": "^2.0.1",
    "js-beautify": "^1.15.4",
    "lightningcss": "^1.30.1",
    "markuplint": "^4.13.1",
    "postcss": "^8.5.6",
    "postcss-lightningcss": "^1.0.2",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sass-embedded": "^1.92.1",
    "stylelint": "^16.24.0",
    "stylelint-config-recess-order": "^7.3.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "tailwindcss": "^4.1.13",
    "vite-plugin-sass-glob-import": "^5.0.0"
  },
  "dependencies": {
    "modern-normalize": "^3.0.1"
  },
  "browserslist": [
    "extends browserslist-config-baseline"
  ],
  "browserslist-config-baseline": {
    "logConfigToConsole": true
  }
}
