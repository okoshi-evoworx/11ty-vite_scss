<li>
  <a {% if item.data.external %}href="{{ item.data.external }}" target="_blank" class="underline decoration-1 underline-offset-1 hover:no-underline"{% elif item.url %}href="{{ item.url }}" class="underline decoration-1 underline-offset-1 hover:no-underline"{% endif %}>
    {%- if item.data.thumb %}
      <figure><img src="{{ item.data.thumb }}" alt="" width="160" height="160" loading="lazy" /></figure>
    {%- endif %}
    <h3 {% if item.data.external %}class="after:content-['â†—'] after:ml-1"{% endif %}>{{ item.data.title }}</h3>
    <p class="date"><time datetime="{{ item.data.date | datetime }}">{{ item.data.date | dateview }}</time></p>
  </a>
  {%- if item.data.tags %}
    <ul class="flex flex-wrap gap-2">
      {%- for tag in item.data.tags %}
        <li><a href="{{ site.root }}news/{{ tag }}/" class="underline decoration-1 underline-offset-1 hover:no-underline">{{ tag }}</a></li>
      {%- endfor %}
    </ul>
  {%- endif %}
</li>
