{
  "name": "11ty-vite_scss",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "build": "npx @11ty/eleventy & npx vite build",
    "11ty": "npx @11ty/eleventy",
    "11ty:w": "npx @11ty/eleventy --watch",
    "vite": "npx vite build",
    "vite:w": "vite build --watch",
    "serve": "npx @11ty/eleventy --serve & npx vite build --watch",
    "s": "npm run serve",
    "watch": "npx @11ty/eleventy --watch & npx vite build --watch",
    "w": "npm run watch",
    "check:html": "markuplint 'dist/**/*.html'",
    "check:njk": "prettier 'src/njk/**/*.njk' '!./dist' --check",
    "fix:njk": "prettier './src/njk/**/*.njk' '!./dist' --write",
    "check:js": "biome check src/js/**/*.js",
    "fix:js": "biome check --write src/js/**/*.js",
    "check:css": "stylelint 'src/css/**/*.{css,scss}'",
    "fix:css": "stylelint --fix 'src/css/**/*.{css,scss}'",
    "check": "npm run check:html & npm run check:njk & npm run check:js & npm run check:css",
    "fix": "npm run fix:njk & npm run fix:js & npm run fix:css"
  },
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@markuplint/nunjucks-parser": "^4.6.21",
    "@tailwindcss/postcss": "^4.1.13",
    "biome": "^0.3.3",
    "browserslist": "^4.25.4",
    "date-fns": "^4.1.0",
    "lightningcss": "^1.30.1",
    "markuplint": "^4.13.1",
    "postcss": "^8.5.6",
    "postcss-lightningcss": "^1.0.2",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sass-embedded": "^1.92.1",
    "stylelint": "^16.24.0",
    "stylelint-config-recess-order": "^7.3.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "tailwindcss": "^4.1.13",
    "vite-plugin-sass-glob-import": "^5.0.0"
  }
}
